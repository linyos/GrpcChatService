@page "/home"

<PageTitle>儀表板 - gRPC 聊天管理系統</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="fw-bold">儀表板</h1>
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-arrow-repeat me-1"></i> 重新整理
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-calendar3 me-1"></i> 最近 24 小時
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">最近 24 小時</a></li>
                            <li><a class="dropdown-item" href="#">最近 7 天</a></li>
                            <li><a class="dropdown-item" href="#">最近 30 天</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">自訂範圍</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card h-100 border-0">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-center me-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: rgba(52, 152, 219, 0.1);">
                                <i class="bi bi-people fs-4" style="color: #3498db;"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">線上用戶</h6>
                            <h3 class="fw-bold mb-0">@activeUsers</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up-short"></i> 12%
                        </span>
                        <span class="text-muted ms-1 small">相較於上週</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <div class="card h-100 border-0">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-center me-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: rgba(46, 204, 113, 0.1);">
                                <i class="bi bi-chat-dots fs-4" style="color: #2ecc71;"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">今日訊息</h6>
                            <h3 class="fw-bold mb-0">@totalMessages</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up-short"></i> 24%
                        </span>
                        <span class="text-muted ms-1 small">相較於昨日</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <div class="card h-100 border-0">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-center me-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: rgba(155, 89, 182, 0.1);">
                                <i class="bi bi-bar-chart fs-4" style="color: #9b59b6;"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">用戶增長</h6>
                            <h3 class="fw-bold mb-0">@userGrowth</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-arrow-down-short"></i> 5%
                        </span>
                        <span class="text-muted ms-1 small">相較於上月</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <div class="card h-100 border-0">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="text-center me-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: rgba(231, 76, 60, 0.1);">
                                <i class="bi bi-exclamation-triangle fs-4" style="color: #e74c3c;"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0 text-muted">系統警告</h6>
                            <h3 class="fw-bold mb-0">@systemAlerts</h3>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-down-short"></i> 18%
                        </span>
                        <span class="text-muted ms-1 small">相較於上週</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-12 col-lg-8">
            <div class="card border-0 h-100">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">用戶活動趨勢</h5>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-secondary active">日</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">週</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">月</button>
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="chart-placeholder d-flex flex-column align-items-center justify-content-center py-5">
                        <i class="bi bi-bar-chart text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">圖表資料載入中...</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card border-0 h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">最近系統日誌</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var log in recentLogs)
                        {
                            <div class="list-group-item border-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 me-2">
                                        @switch (log.Type.ToLower())
                                        {
                                            case "info":
                                                <span class="badge rounded-pill bg-info">
                                                    <i class="bi bi-info-circle"></i>
                                                </span>
                                                break;
                                            case "warning":
                                                <span class="badge rounded-pill bg-warning">
                                                    <i class="bi bi-exclamation-circle"></i>
                                                </span>
                                                break;
                                            case "error":
                                                <span class="badge rounded-pill bg-danger">
                                                    <i class="bi bi-x-circle"></i>
                                                </span>
                                                break;
                                        }
                                    </div>
                                    <div class="flex-grow-1 ms-1">
                                        <p class="mb-0 small">@log.Message</p>
                                        <small class="text-muted">@log.Time.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center p-3 border-top">
                        <a href="/logs" class="btn btn-sm btn-link">查看所有日誌</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <div class="card border-0">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">活躍聊天室</h5>
                    <a href="/chat" class="btn btn-sm btn-link">查看全部</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var room in activeRooms)
                        {
                            <div class="list-group-item border-0 py-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-group me-2">
                                            <span class="avatar avatar-sm">
                                                <img src="https://via.placeholder.com/32" class="rounded-circle" alt="用戶頭像" />
                                            </span>
                                            <span class="avatar avatar-sm">
                                                <img src="https://via.placeholder.com/32" class="rounded-circle" alt="用戶頭像" />
                                            </span>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@room.Name</h6>
                                            <small class="text-muted">@room.ParticipantCount 位成員</small>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="badge bg-success">@room.MessageCount 訊息</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card border-0">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">系統狀態</h5>
                </div>
                <div class="card-body p-3">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>CPU 使用率</span>
                            <span>@cpuUsage%</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @cpuUsage%" aria-valuenow="@cpuUsage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>記憶體使用率</span>
                            <span>@memoryUsage%</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @memoryUsage%" aria-valuenow="@memoryUsage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>磁碟使用率</span>
                            <span>@diskUsage%</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @diskUsage%" aria-valuenow="@diskUsage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <div>
                                所有系統運行正常
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // 模擬資料
    private int activeUsers = 127;
    private int totalMessages = 1483;
    private int userGrowth = 25;
    private int systemAlerts = 2;
    
    private int cpuUsage = 32;
    private int memoryUsage = 64;
    private int diskUsage = 47;
    
    private List<LogEntry> recentLogs = new List<LogEntry>
    {
        new LogEntry { Time = DateTime.Now.AddMinutes(-5), Type = "Info", Message = "用戶 user123 已登入系統" },
        new LogEntry { Time = DateTime.Now.AddMinutes(-15), Type = "Warning", Message = "系統記憶體使用率超過 65%" },
        new LogEntry { Time = DateTime.Now.AddHours(-2), Type = "Error", Message = "無法連接到資料庫伺服器" },
        new LogEntry { Time = DateTime.Now.AddHours(-4), Type = "Info", Message = "系統備份完成" }
    };
    
    private List<ChatRoom> activeRooms = new List<ChatRoom>
    {
        new ChatRoom { Name = "客服聊天室", ParticipantCount = 12, MessageCount = 245 },
        new ChatRoom { Name = "技術支援", ParticipantCount = 8, MessageCount = 127 },
        new ChatRoom { Name = "銷售團隊", ParticipantCount = 5, MessageCount = 89 },
    };
    
    // 定義資料類別
    private class LogEntry
    {
        public DateTime Time { get; set; }
        public string Type { get; set; } = string.Empty;
        public string Message { get; set; } = string.Empty;
    }
    
    private class ChatRoom
    {
        public string Name { get; set; } = string.Empty;
        public int ParticipantCount { get; set; }
        public int MessageCount { get; set; }
    }
}