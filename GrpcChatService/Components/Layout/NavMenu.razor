@using Microsoft.AspNetCore.Components.Routing

<div class="modern-navbar">
    <div class="navbar-header">
        <a class="navbar-brand" href="">
            <i class="bi bi-chat-square-text-fill me-2"></i>
            <span>gRPC 聊天服務</span>
        </a>
        <button title="導航菜單" class="navbar-toggler" @onclick="ToggleNavMenu">
            <i class="bi @(collapseNavMenu ? "bi-list" : "bi-x-lg")"></i>
        </button>
    </div>

    <div class="@NavMenuCssClass nav-container">
        <div class="user-profile">
            <div class="profile-avatar">
                <i class="bi bi-person-circle"></i>
            </div>
            <div class="profile-info">
                <span class="profile-name">管理員</span>
                <span class="profile-status"><i class="bi bi-circle-fill"></i> 線上</span>
            </div>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">主要功能</div>
            <nav class="nav-menu">
                <NavLink class="nav-item" href="" Match="NavLinkMatch.All">
                    <i class="nav-icon bi bi-house-door-fill"></i>
                    <span class="nav-text">首頁</span>
                </NavLink>
                <NavLink class="nav-item" href="chat">
                    <i class="nav-icon bi bi-chat-dots-fill"></i>
                    <span class="nav-text">聊天室</span>
                    <span class="nav-badge">@(_unseenMessages > 0 ? _unseenMessages.ToString() : "")</span>
                </NavLink>
                <NavLink class="nav-item" href="clients">
                    <i class="nav-icon bi bi-people-fill"></i>
                    <span class="nav-text">客戶端</span>
                </NavLink>
            </nav>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">系統管理</div>
            <nav class="nav-menu">
                <NavLink class="nav-item" href="logs">
                    <i class="nav-icon bi bi-file-text-fill"></i>
                    <span class="nav-text">系統日誌</span>
                </NavLink>
                <NavLink class="nav-item" href="settings">
                    <i class="nav-icon bi bi-gear-fill"></i>
                    <span class="nav-text">設定</span>
                </NavLink>
            </nav>
        </div>

        <div class="nav-footer">
            <div class="nav-footer-item">
                <i class="bi bi-info-circle"></i>
                <span>版本: 1.0.0</span>
            </div>
        </div>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;
    private int _unseenMessages = 3; // 示範用，實際使用時應該從服務中獲取

    private string? NavMenuCssClass => collapseNavMenu ? "nav-collapsed" : "nav-expanded";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
