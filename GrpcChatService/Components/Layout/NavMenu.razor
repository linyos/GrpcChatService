@using Microsoft.AspNetCore.Components.Routing

<div class="sidebar @(collapseNavMenu ? "collapsed" : "")">
    <div class="sidebar-header">
        <div class="sidebar-brand">
            <i class="bi bi-chat-dots-fill me-2"></i>
            <span class="brand-text">gRPC 聊天管理</span>
        </div>
        <button class="btn btn-link text-light d-md-none" @onclick="ToggleNavMenu">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <div class="user-profile">
        <div class="d-flex align-items-center p-3">
            <div class="avatar me-3">
                <img src="https://via.placeholder.com/40" alt="管理員" class="rounded-circle" />
                <span class="status-badge bg-success"></span>
            </div>
            <div>
                <h6 class="mb-0 text-light">系統管理員</h6>
                <small class="text-light-50">線上</small>
            </div>
        </div>
    </div>

    <div class="sidebar-menu">
        <ul class="nav flex-column">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="bi bi-speedometer2 me-2"></i>
                    <span>儀表板</span>
                </NavLink>
            </li>
            
            <li class="nav-item">
                <NavLink class="nav-link" href="chat">
                    <i class="bi bi-chat-left-text me-2"></i>
                    <span>聊天監控</span>
                    @if (unseenMessages > 0)
                    {
                        <span class="badge bg-danger rounded-pill ms-auto">@unseenMessages</span>
                    }
                </NavLink>
            </li>

            <li class="nav-item">
                <NavLink class="nav-link" href="clients">
                    <i class="bi bi-people me-2"></i>
                    <span>用戶管理</span>
                </NavLink>
            </li>

            <li class="nav-heading">系統</li>
            
            <li class="nav-item">
                <NavLink class="nav-link" href="logs">
                    <i class="bi bi-journal-text me-2"></i>
                    <span>系統日誌</span>
                </NavLink>
            </li>
            
            <li class="nav-item">
                <NavLink class="nav-link" href="settings">
                    <i class="bi bi-gear me-2"></i>
                    <span>設定</span>
                </NavLink>
            </li>

            <li class="nav-item mt-auto">
                <a href="#" class="nav-link text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    <span>登出系統</span>
                </a>
            </li>
        </ul>
    </div>
</div>

@code {
    private bool collapseNavMenu = false;
    private int unseenMessages = 3; // 示範用，實際使用時應該從服務中獲取

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
